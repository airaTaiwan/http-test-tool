{
  "name": "@http-test-tool/monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.1.0",
  "scripts": {
    "test": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "pnpm --filter './packages/**' build",
    "review": "npx changelogithub --dry",
    "taze": "taze minor -wIr",
    "release": "bumpp -r && esno scripts/release.ts"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.16.2",
    "@types/fs-extra": "^11.0.4",
    "@vue/test-utils": "^2.4.6",
    "bumpp": "^9.4.1",
    "consola": "^3.2.3",
    "eslint": "^8.57.0",
    "eslint-plugin-format": "^0.1.1",
    "esno": "^4.7.0",
    "fs-extra": "^11.2.0",
    "lint-staged": "^15.2.2",
    "pnpm": "^9.1.0",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.11.1",
    "taze": "^0.13.8",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue}": [
      "eslint --cache --fix"
    ]
  }
}
